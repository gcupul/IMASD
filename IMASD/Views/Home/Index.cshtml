@{
    ViewBag.Title = "Home Page";
}


<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Home </h6>
                </div>
            </div>
        </div>
        <!-- Card stats -->
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card card-stats">
                    <!-- Card body -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title text-uppercase text-muted mb-0">Empleados</h5>
                                <span class="h2 font-weight-bold mb-0">@ViewBag.countEmpleados</span>
                            </div>
                            <div class="col-auto">
                                <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                                    <i class="fa fa-user"></i>
                                </div>
                            </div>
                        </div>
                        <p class="mt-3 mb-0 text-sm">
                            <a class="nav-link active" href="@Url.Action("Create", "Departamentos")">
                                <i class="fa fa-plus"></i>
                                <span class="text-nowrap"> Crear un nuevo departamento</span>
                            </a>
                        </p>
                        <p class="mt-3 mb-0 text-sm">
                            <a class="nav-link active" href="@Url.Action("Create", "Empleados")">
                                <i class="fa fa-plus"></i>
                                <span class="text-nowrap"> Crear un nuevo empleado</span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card card-stats">
                    <!-- Card body -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title text-uppercase text-muted mb-0">Nominas</h5>
                                <span class="h2 font-weight-bold mb-0">@ViewBag.countNominas</span>
                            </div>
                            <div class="col-auto">
                                <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                                    <i class="fa fa-money-check-alt"></i>
                                </div>
                            </div>
                        </div>
                        <p class="mt-3 mb-0 text-sm">
                            <a class="nav-link active" href="@Url.Action("Create", "Nomina")">
                                <i class="fa fa-plus"></i>
                                <span class="text-nowrap"> Crear una nueva Nomina</span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
            </div>
        </div>
    </div>
</div>


<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0">Lista de Empleados</h3>
                        </div>
                        <div class="col text-right">
                            @Html.ActionLink("Crear nuevo", "Create", "Empleados", null, new { @class = "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    @Html.Partial("/Views/Empleados/TableEmpleados.cshtml")
                </div>
            </div>
        </div>
    </div>


    <hr />
    <footer class="footer pt-0">
        <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
    </footer>
</div>